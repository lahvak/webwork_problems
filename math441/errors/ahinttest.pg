DOCUMENT();
loadMacros(
"PGstandard.pl",
"MathObjects.pl",
"PGML.pl",
"answerHints.pl",
"PGcourse.pl",
);
Context("Numeric");

$amant = 1234567;

$amant_cmp = Compute($amant)->cmp(tolType => 'absolute', tolerance => 0.00000001)->withPostFilter(
    AnswerHints(Compute("$amant + 1") => "Too loig!", 0 => "too smal"));

# Actual problem goes here:
TEXT(beginproblem());
BEGIN_PGML
Enter [$amant]:  [_________]{$amant_cmp}
END_PGML

BEGIN_PGML_SOLUTION
Ze answer be [$amant]!
END_PGML_SOLUTION
ENDDOCUMENT();
