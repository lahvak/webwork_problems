DOCUMENT();
loadMacros(
"PGstandard.pl",
"MathObjects.pl",
"PGML.pl",
"contextArbitraryStrings.pl",
"PGcourse.pl",
);
# Define variables here:

Context("ArbitraryStrings");

@bigits = ();

for my $i (1..6) {
   push @bigits, random(0,1);
}

push @bigits, 1;

$dec = 0.0;

$mul = 0.5;
for my $i (@bigits) {
   $dec += $i*$mul;
   $mul /= 2;
}

$ans = String(join "", @bigits);

# Actual problem goes here:
TEXT(beginproblem());
BEGIN_PGML
Enter the binary representation of the decimal number [$dec]:

0.[_______]{$ans}

END_PGML

ENDDOCUMENT();
